<%  include ../partials/header.ejs  %>
    <div class = "container">
        <div class = "row">
            <h1 style = "text-align: center;">Edit <%=campground.name%></h1>
            <div style = "width:50%; margin : 25px auto">
                <form action= "/campgrounds/<%=campground._id%>?_method=PUT" method = "POST">
                    <div style = "width:60%; margin:0 auto">
                        <div class="form-group">
                            <input class="form-control" type = "text" value="<%=campground.name%>" placeholder = "Name" name = "campground[name]">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type = "text" value="<%=campground.image%>" placeholder = "Image URL" name = "campground[image]">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type = "number" value="<%=campground.price%>" placeholder = "Price per Night in Rs." name = "campground[price]">
                        </div>
                        
                    </div>
                    
                    <div class= "form-group">
                        <textarea class="form-control" type = "text"  placeholder = "Description" name = "campground[description]"><%=campground.description%></textarea>                        
                    </div>
                    <div class="form-group">
                        <button class= "btn btn-lg btn-success btn-block">Update</button>
                    </div>
                </form>
                <a style="display : block; text-align : center;" href = "/campgrounds/<%=campground._id%>">Go Back</a>
            </div>
        </div>
    </div>
    
    
<%  include ../partials/footer.ejs  %>